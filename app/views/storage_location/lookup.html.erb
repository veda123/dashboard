<section class="col-md-10 ml-sm-auto col-lg-10 pt-3 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1>Storage Location</h1>
    </div>
    <%= form_tag storage_location_search_path, method: :get, id: "storage-location-form" do %>
        <div class="form-group row no-padding text-center col-md-12">
            <div class="col-md-6">
                <%= text_field_tag :storage , params[:storage], placeholder: "Location Number", autofocus: true,
                    class: "form-control search-box input-lg" %>       
            </div>
            <div class="col-md-2">
                <%= button_tag(type: :submit, class: "btn btn-md btn-success") do %>
                    <i class="fa fa-search"></i> Look Up A Storage Location
                <% end %>
            </div>
        </div>
    <% end %>
    <br>
    <% if @location %>
<table class="table table-hover">
<thead class="thead-dark">
  <tr>
    <th>Storage Location</th>
    <th>Description</th>
  </tr>
</thead>
<tbody>
<%  @location.each do |location| %>
  <tr>
    <td><%= location["SLOC"] %></td>
    <td><%= location["description"] %> </td>
  </tr>
  <% end %> 
</tbody>
</table>
<% end %>

</section>
